@namespace Dailylight.Web.Server.Admin
@using System.Threading;
@using System.Threading.Tasks
@using System.Globalization
@using Dailylight.Server.Core
@using Microsoft.EntityFrameworkCore

<div class="row customer-order-frame-contaianer">
    <div class="col-lg-12 panel-col-custom">
        <div class="c-card display-sheet" data-mh="invoices-cards" style="background-image: url(Assets/Images/Devotion/@Devotion.ImageUrl)">
            <div class="c-card-top-layer">
                <div class="c-card__header c-card__header--transparent o-line u-border-bottom-zero">
                    <h3 class="c-card__title d-title">
                        @Devotion.Title
                        <span class="u-block u-text-small">
                            @Devotion.Date.ToString("dd MMMM, yyyy")
                        </span>
                    </h3>

                    <div class="c-card__meta u-relative">
                        <a class="dropdown-toggle" href="#" id="dropdwonMenuCard1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="u-text-mute u-opacity-heavy fa fa-ellipsis-h"></i>
                        </a>

                        <div class="c-dropdown__menu dropdown-menu dropdown-menu-right fade" aria-labelledby="dropdwonMenuCard1">

                            <a class="c-dropdown__item" @onclick="OnModify">Modify Devotion</a>
                            <a class="c-dropdown__item" @onclick="@OnDelete">Delete Devotion</a>
                        </div>
                    </div>

                </div>

                <div class="d-f-reading-row">

                    <p>@Devotion.FurtherReading</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row customer-order-frame-contaianer">
    <div class="col-md-12">
        <div class="c-card c-card--responsive u-mb-medium">
            <div class="c-card__header c-card__header--transparent o-line" style="justify-content: center;">
                <p class="c-card__meta d-text-quote">
                    <strong>
                        <em>
                            @Devotion.TextQuote
                        </em>
                        <br />
                        <em>
                            @Devotion.AnchorScripture
                        </em>
                    </strong>
                </p>
            </div>

            <div class="c-table u-border-zero">
                <div class="devotion-content-wrapper">
                    <p class="d-text-parags">
                        @Devotion.FirstTextParagraph
                    </p>
                    <br />
                    <p class="d-text-parags">
                        @Devotion.SecondTextParagraph
                    </p>
                    <br />
                    <p class="d-text-parags">
                        @Devotion.ThirdTextParagraph
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    #region Public Properties

    /// <summary>
    /// The devotions data model
    /// </summary>
    [Parameter]
    public DevotionsDataModel Devotion { get; set; }

    #endregion


    #region Call Backs

    /// <summary>
    /// The call back event to pop up devotion modify dialog
    /// </summary>
    [Parameter]
    public EventCallback OnModify { get; set; }

    /// <summary>
    /// The call back event to delete a specified devotion
    /// </summary>
    [Parameter]
    public EventCallback OnDelete { get; set; }

    #endregion


    #region Helper Methods



    #endregion
}