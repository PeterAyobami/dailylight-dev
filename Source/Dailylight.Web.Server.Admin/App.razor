@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div>
                        <a href="/"><img class="c-sidebar__brand-img" src="Assets/Images/logo-dark.png"></a>
                        <h1>ACCESS DENIED!</h1>
                        <p><a href="/">Click here</a> to login</p>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(NotFoundPageLayout)">
                <a href="/dashboard"><img class="c-sidebar__brand-img" src="Assets/Images/logo-dark.png"></a>
                <h1>Page not Found</h1>
                <p><em>Sorry, there's nothing at this address.</em></p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>